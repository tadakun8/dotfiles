# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
max_line_length = off

[*.json]
indent_style = space
indent_size = 2
max_line_length = off

[package-lock.json]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 70
